{
  "name": "@tboyt/telegraph",
  "version": "0.0.3",
  "description": "GGPO-style netcode for WebRTC-powered video games.",
  "keywords": [
    "ggpo",
    "games",
    "multiplayer",
    "Webrtc",
    "netcode"
  ],
  "author": "Thomas Boyt <me@thomasboyt.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasboyt/telegraph"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest --coverage",
    "demo:start": "concurrently npm:demo:dev-server npm:type-check:watch npm:demo:peerjs-server --names webpack,tsc,peerjs --prefix-colors green.bold,blue.bold,yellow.bold",
    "demo:watch": "webpack --mode=development --watch --config demo/webpack.config.js",
    "demo:dev-server": "webpack-dev-server --config demo/webpack.config.js",
    "demo:peerjs-server": "peerjs --port 9000",
    "demo:build": "webpack --mode=production --config demo/webpack.config.js",
    "demo2:start": "concurrently npm:demo2:dev-server npm:type-check:watch npm:demo2:peerjs-server --names webpack,tsc,peerjs --prefix-colors green.bold,blue.bold,yellow.bold",
    "demo2:watch": "webpack --mode=development --watch --config demo2/webpack.config.js",
    "demo2:dev-server": "webpack-dev-server --config demo2/webpack.config.js",
    "demo2:peerjs-server": "peerjs --port 9000",
    "demo2:build": "webpack --mode=production --config demo2/webpack.config.js",
    "demo3:start": "concurrently npm:demo3:dev-server npm:type-check:watch npm:demo3:peerjs-server --names webpack,tsc,peerjs --prefix-colors green.bold,blue.bold,yellow.bold",
    "demo3:watch": "webpack --mode=development --watch --config demo3/webpack.config.js",
    "demo3:dev-server": "webpack-dev-server --config demo3/webpack.config.js",
    "demo3:peerjs-server": "peerjs --port 9000",
    "demo3:build": "webpack --mode=production --config demo3/webpack.config.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.10",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-numeric-separator": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/fast-json-stable-stringify": "^2.1.0",
    "@types/gl-matrix": "^3.2.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^13.13.52",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@webpack-cli/serve": "^1.6.0",
    "ajv": "^8.9.0",
    "babel-jest": "^25.5.1",
    "babel-loader": "^8.2.3",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^5.3.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.4.1",
    "glob": "^7.2.0",
    "html-webpack-plugin": "^4.5.2",
    "jest": "^27.4.7",
    "jest-environment-jsdom": "^25.5.0",
    "peer": "^0.6.1",
    "prettier": "^2.5.1",
    "typescript": "^3.9.10",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.3.0",
    "webpack-dev-server": "^4.7.3"
  },
  "dependencies": {
    "@types/lodash.isequal": "^4.5.5",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "fast-json-stable-stringify": "^2.1.0",
    "fp-ts": "^2.11.8",
    "gl-matrix": "^3.4.3",
    "io-ts": "^2.2.16",
    "lodash.isequal": "^4.5.0",
    "peerjs": "^1.3.2",
    "stream-browserify": "^3.0.0",
    "typescript-formatter": "^7.2.2"
  }
}
